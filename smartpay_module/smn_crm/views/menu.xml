    <menuitem name="Admins"
          id="menu_admin_custom_root"
          web_icon="smn_crm,static/img/icon.svg"
          sequence="271"
          />

    <menuitem id="menu_crm_marketing_campaign"
              name="Campaign"
              parent="smn_crm_leads_main" sequence="6"
