<?xml version="1.0"?>
<odoo>
        <record id="lead_input_image_view_form" model="ir.ui.view">
            <field name="name">lead.input.image.form</field>
            <field name="model">lead.input.image</field>
            <field name="arch" type="xml">
                <form string="Popup Message">
                    <group class="oe_title">
                        <field name="name" invisible="0"/>
                        <field name="img_cmnd_1" widget="image" attrs="{'invisible': [('name', '!=', 'cmnd')]}" style="width: 30%;"/>
                        <field name="img_cmnd_2" widget="image" attrs="{'invisible': [('name', '!=', 'cmnd')]}" style="width: 30%;"/>
                        <field name="img_business" widget="image" attrs="{'invisible': [('name', '!=', 'business')]}" style="width: 30%;"/>
                    </group>
                    <footer>
                        <button string="Upload" name="add_upload_im" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="lead_input_image_action" model="ir.actions.act_window">
            <field name="name">Popup Message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lead.input.image</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="lead_input_image_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
