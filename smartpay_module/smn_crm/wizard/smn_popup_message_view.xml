<?xml version="1.0"?>
<odoo>
        <record id="smn_popup_message_view_form" model="ir.ui.view">
            <field name="name">smn.popup.message.form</field>
            <field name="model">smn.popup.message</field>
            <field name="arch" type="xml">
                <form string="Popup Message">
                    <group class="oe_title">
                        <field name="name" readonly="1" style="color: red;" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="smn_popup_message_action" model="ir.actions.act_window">
            <field name="name">Popup Message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">smn.popup.message</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="smn_popup_message_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
