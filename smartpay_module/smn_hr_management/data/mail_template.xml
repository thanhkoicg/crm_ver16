<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="hr_applicant_create_user_mail_template" model="mail.template">
            <field name="name">[Recruitment] Profile has been create code</field>
            <field name="email_from">${ctx.get('email_from', '')}</field>
            <field name="email_to">${ctx.get('email_to', '')}</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="subject">[Recruitment] Profile has been create code</field>
            <field name="body_html" type="xml">
				<p>[Recruitment] Profile has been create code by ${ctx.get('user_create_code', '#')}</p>
                <p><strong>Click <a href="${ctx.get('applicant_url', '#')}">Link</a> to view detail</strong></p>
			</field>
        </record>
        <record id="hr_contract_send_to_sign" model="mail.template">
            <field name="name">[Contract] Contract need to Sign</field>
            <field name="email_from">${ctx.get('email_from', '')}</field>
            <field name="email_to">${ctx.get('email_to', '')}</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="subject">[Contract] Contract need to Sign</field>
            <field name="body_html" type="xml">
				<p>Dear ${object.employee_id.user_id and object.employee_id.user_id.email or ''},</p>
                <br/>
                <p>HR Department kindly to inform Mr/Ms Services Contract (${ctx.get('contract_type', '')}):</p>
                <p>- Contract Number: ${ctx.get('contact_number', '')}</p>
                <p>- Start Date : ${ctx.get('date_start', '')}</p>
                <p>- Duration :${ctx.get('date_start', '')} - ${ctx.get('date_end', '')}</p>
                <p>Mr/Ms please login using the following link below to view and sign before ${ctx.get('deadline_sign_date', '')} for the HR Department complete the necessary procedures.</p>
                <p><strong><a href="${ctx.get('contract_link', '#')}">Link</a></strong></p>
                <p>During the implementation, if there are any problems, please contact the HR Department (${ctx.get('smn_email_hr', '')}) for assistance. </p>
                <p>Thanks Mr/Ms, </p>
                <p>HR Department.</p>
			</field>
        </record>
        <record id="contract_notify_about_expire" model="mail.template">
            <field name="name">[Contract] Contract about to expire</field>
            <field name="email_from">${ctx.get('email_from', '')}</field>
            <field name="email_to">${ctx.get('email_to', '')}</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="subject">[Contract] Contract about to expire</field>
            <field name="body_html" type="xml">
				<p>Dear Mr/Ms,</p>
                <br/>
                <p>The contracts below have 15 days left to expire :</p>
                <p>- Contract Number: ${ctx.get('list_contract_name', '')}</p>
                <p>Thanks Mr/Ms, </p>
			</field>
        </record>
    </data>
</odoo>
